<div id="create_project">
	<div id="box" align="center">
		<div>
			<%= form_for @project do |f| %>	
				<div id="row"><%= f.label :project_name %></div>
				<div id="row"><%= f.text_field :name %></div>
				<div id="row"><%= f.label :description %></div>
				<div id="row"><%= f.text_area :description %></div>
				<div id="row"><%= f.label :start_date %></div>
				<div id="row"><%= f.text_field :start_date, placeholder: "yyyy-mm-dd" %></div>
				<div id="row"><%= f.label :project_status %></div>
				<div id="row">
				<%= f.select :project_status, [ 'Biginning', 'In-progress', 'Completed'], :prompt => 'Select One' %>
				</div>
				<div id="row"><%= f.submit :submit %></div>
			<% end %>
		</div>
	</div>
</div>
