<div id="timesheet" style="float: left;">

	<div id="form">
	<%= form_tag action: 'create', method: 'post' do %>
		<div id="row">
			<div id="column1"><%= label_tag :project_name %></div>
			<div id="column2"><%= text_field_tag :project_name%></div>
		</div>
		<div id="row">
			<div id="column1"><%= label_tag :start_time %></div>
			<div id="column2"><%= time_select :times, :start_time %> </div>
		</div>
		<div id="row">
			<div id="column1"><%= label_tag :end_time %></div>
			<div id="column2"><%= time_select :times, :end_time %>   </div>
		</div>
		<div id="row">
			<div id="column1"><%= label_tag :date %></div>
			<div style="float: left;
    					padding-left: 20px;
    					width: 200px;">
    		<%= date_select :times, :date %></div>	
		</div>
		<div id="row">
			<div id="column1"><%= label_tag :tasks %></div>
			<div id="column1"><%= text_area_tag :tasks %></div>
		</div>
		<div id="row">
      		<p align="center"><%= submit_tag 'Login' %></p>
      	</div>
	<% end %>
	</div>
</div>