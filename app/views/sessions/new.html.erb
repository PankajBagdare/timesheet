<% provide(:title, 'Login') %>

<div class="login" align="center">
	&nbsp;
  <% if current_user %>
    <p style="color: brown;"> No login form for already signed in user go to  
    <%= link_to "Dashboard", user_path(current_user) %>
    </p>
  <% else %>
  <div class="box">
    
		<h1 id="login">Login</h1>
		&nbsp;
		<div id="table">
			<%= form_tag :action => :create do %>
			    <div id="row">
      			<%= label_tag :user, 'Username: ' %></area>
      			<%= text_field_tag :user %><br>
      		</div>
      
      		<div id="row">
      			<%= label_tag :password, 'Password: ' %></area>
      			<%= password_field_tag :password %><br>
      		</div>
      
    		<div id="row">
      			<%= submit_tag 'Login' %>
      		</div>
    		<% end %>
        <p id="notice"><%= flash[:notice] %></p>
 		</div><br>
   	<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
	</div>
  <% end %>
</div>
